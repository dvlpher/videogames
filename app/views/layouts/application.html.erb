<!DOCTYPE html>
<html>
  <head>
    <title>Videogames</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <% if !logged_in? %>
    <nav class="navbar">
      <%= link_to "Sign up", signup_path, class: 'navlink' %> OR 
      <%= link_to "Login", login_path, class: 'navlink'%> OR
      <%= link_to "Sign in through Facebook", '/auth/facebook', class: 'navlink' %>
    </nav>
    <% end %>

  <% if logged_in? %>
    <nav class="navbar">
      <%= link_to 'Log Out', logout_path, method: :delete, class: 'navlink' %>
      <%= link_to 'All Profiles', profiles_path, class: 'navlink'%>
      <%= link_to 'New Profile', new_profile_path, class: 'navlink' %>
      <%= link_to 'All Games', games_path, class: 'navlink' %>
      <%= link_to 'New Game', new_game_path, class: 'navlink' %>
      <%= link_to 'My Account', user_path(current_user), class: 'navlink' %>
    </nav>
    <% end %>

    <%= yield %>
  </body>
</html>
